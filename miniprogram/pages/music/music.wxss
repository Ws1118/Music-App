page {
  background-color: #f8f8f8;
}
.header {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 999;
  padding-bottom: 10rpx;
  background: -webkit-linear-gradient(to bottom, #286472, #aabcc2);
  background: linear-gradient(to bottom, #286472, #aabcc2);
}
.search-input {
  width: 60%;
  position: absolute;
  left: 60rpx;
  bottom: 6px;
  background-color: #f6f6f6;
  color: #484749;
  height: 32px;
  border-radius: 20px;
  text-align: center;
  opacity: 0.7;
}
.icon-xuanxiang {
  position: absolute;
  left: 25rpx;
  bottom: 6px;
  font-size: 32px;
  color: #f6f6f6;
}
.icon-sousuo {
  position: absolute;
  left: 70rpx;
  bottom: 6px;
  font-size: 25px;
  color: #000000c0;
}
.swiper{
  position: relative;
  margin-bottom: 0rpx;
  height: 340rpx;
}
.img{
  width: 100%;
  height: 100%;
}
.title {
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.nav-title {
  margin-left: 280rpx;
  width: 160rpx;
  height: 60rpx;
  font-size: 50rpx;
  border-radius: 30rpx;
  text-align: center; 
  color: #fff;
}
.playlist-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 10rpx;
  flex-direction: row;
}
.scroll-x{
  white-space: nowrap;
  display: flex;
}
