page {
  background-color: #EDEDED;
}

.ctrl {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F5;
}

.ctrl .ctrl-item {
  flex: 1;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.iconfont {
  margin-right: 20rpx;
  font-size: 32rpx;
}

.item {
  color: #000;
  font-size: 32rpx;
  font-weight: 400;
}

.share-btn {
  background-color: #F5F5F5;
  color: #000;
  border: none;
  display: flex;
  justify-content: center;
  border-left: 1px solid #ccc;
}

.comment-content {
  width: 505rpx;
  text-align: left;
  padding: 20rpx;
  font-size: 32rpx;
  background-color: #F5F5F5;
}

.send {
  display: block;
  width: 180rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #5F95A5;
  color: #DCDCDC;
  font-size: 32rpx;
  border-radius: 10rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
